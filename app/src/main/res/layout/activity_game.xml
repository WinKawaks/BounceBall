<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <cn.xxx.winkawaks.bounceball.view.DrawView
        android:id="@+id/game_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="#33888888"
        android:id="@+id/controller_2"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/tab_2"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@mipmap/controller_2"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#33888888"
        android:id="@+id/controller_1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/tab_1"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@mipmap/controller_1"/>

    </RelativeLayout>

    <include
        android:id="@+id/chapter_view"
        layout="@layout/view_chapter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>